rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    function isSuperAdmin() {
      let settingsDoc = get(/databases/$(database)/documents/settings/settings);
      return request.auth != null
        && request.auth.token.email != null
        && exists(/databases/$(database)/documents/settings/settings)
        && (settingsDoc.data.adminEmails is list)
        && (request.auth.token.email in settingsDoc.data.adminEmails);
    }

    match /{document=**} {
      allow read, write: if false;
    }

    match /meetings/{meetingId} {
      function isMeetingAdmin() {
			  let settingsDoc = get(/databases/$(database)/documents/meetings/$(meetingId)/meetingSettings/settings);
			  return request.auth != null
				  && request.auth.token.email != null
				  && (request.auth.token.email in settingsDoc.data.adminEmails);
      }
      function isMeetingPublic() {
        let settingsDoc = get(/databases/$(database)/documents/meetings/$(meetingId)/meetingSettings/settings);
        return settingsDoc.data.isPublic == true;
      }
      function isMeetingParticipant() {
        return request.auth != null
          && exists(/databases/$(database)/documents/meetings/$(meetingId)/participants/$(request.auth.uid));
      }

      allow get: if isMeetingPublic() || isMeetingAdmin() || isMeetingParticipant();
      allow create: if request.auth != null;
      allow write: if isMeetingAdmin();
      allow list: if isSuperAdmin();

      match /speeches/{speechId} {
        allow create: if false;
        allow read: if true;
        allow update: if isMeetingAdmin();
        allow delete: if false;
      }

      match /speechTypes/{speechTypeId} {
        allow read: if true;
        allow write: if isMeetingAdmin();
      }

      match /proposals/{proposalId} {
        allow read: if true;
        allow write: if isMeetingAdmin();
      }

      match /votingSessions/{votingSessionId} {
        allow read: if true;
        allow create: if false;
        allow update, delete: if false;

        match /votes/{voteId} {
          function votesArePublic() {
            let s = get(/databases/$(database)/documents/meetings/$(meetingId)/votingSessions/$(votingSessionId));
            return exists(/databases/$(database)/documents/meetings/$(meetingId)/votingSessions/$(votingSessionId))
              ? (s.data.open == false && s.data.votePublicity == "PUBLIC")
              : false;
          }

          allow read, list: if isMeetingAdmin() || votesArePublic();
          allow create: if false;
          allow update, delete: if false;
        }
      }
    }
  }
}